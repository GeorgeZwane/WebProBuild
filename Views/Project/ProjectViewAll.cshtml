@model IEnumerable<WebSpaceApp.Models.CreateProjectViewModel>

@{
    ViewData["Title"] = "Director - All Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f1f1f1;
    }

    .container {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 220px;
        background-color: #fff;
        padding: 20px 10px;
        border-right: 1px solid #ddd;
        display: flex;
        flex-direction: column;
    }

        .sidebar .logo {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 30px;
            color: #212529;
        }

    .nav-list {
        list-style: none;
        padding: 0;
        margin: 0;
        flex-grow: 1;
    }

        .nav-list li {
            padding: 12px 10px;
            margin-bottom: 8px;
            border-radius: 4px;
            transition: background 0.2s, color 0.2s;
        }

            .nav-list li a {
                color: #212529;
                text-decoration: none;
                display: block;
            }

            .nav-list li:hover,
            .nav-list li.active {
                background-color: darkorange;
                font-weight: bold;
            }

    .main-content {
        flex: 1;
        padding: 30px 40px;
        overflow-y: auto;
        background-color: #f8f9fa;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
    }

    .recent-activity h2 {
        margin-bottom: 20px;
        color: #343a40;
    }

    .activity-cards {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .card {
        background-color: #fff;
        border: 1px solid #ffc107;
        padding: 20px;
        border-radius: 8px;
        flex: 1 1 180px;
        text-align: center;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }

        .card span {
            display: block;
            font-size: 28px;
            font-weight: bold;
            color: #212529;
        }

        .card p {
            margin-top: 10px;
            color: #555;
        }

    .view-more,
    .view-all {
        background-color: #212529;
        color: #fff;
        border: none;
        padding: 8px 14px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
    }

    .dashboard-row {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        margin-top: 40px;
    }

    .material-usage,
    .top-materials {
        background-color: #fff;
        border: 1px solid #ffc107;
        padding: 20px;
        border-radius: 8px;
        flex: 1 1 300px;
    }

    .chart {
        margin-top: 20px;
    }

    canvas {
        max-width: 100%;
        height: auto;
    }

    .progress-container {
        margin-top: 20px;
    }

    .progress-label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .progress-bar-bg {
        background-color: #eee;
        border-radius: 20px;
        height: 20px;
        width: 100%;
    }

    .progress-bar-fill {
        height: 100%;
        border-radius: 20px;
    }

    .insight-box {
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

        .insight-box ul {
            list-style: none;
            padding-left: 0;
            margin: 0;
        }

        .insight-box li {
            margin-bottom: 10px;
            color: #333;
        }

   
        .container

    {
        flex-direction: column;
    }

    .sidebar {
        width: 100%;
        flex-direction: row;
        overflow-x: auto;
    }

    .nav-list {
        display: flex;
        flex-direction: row;
        gap: 10px;
    }

    .main-content {
        padding: 20px;
    }

    .activity-cards {
        flex-direction: column;
    }

    }
</style>

<div class="director-container">
    <div class="sidebar">
        <div class="logo">Director Menu</div>
        <ul class="nav-list">
            <li class="active">
                <a href="@Url.Action("ProjectOverview", "ProjectOverview")">All Projects</a>
            </li>
            <li>
                <a href="@Url.Action("Home", "Acount")">Home</a>
            </li>

            <li>
                <a href="@Url.Action("Logout", "Account")">Log out</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="director-main-content">
        <div class="page-header">
            <h1 class="page-title">All Projects Overview</h1>
        </div>

        <div class="project-banner">
            <div><h2>Active Projects</h2></div>

            <div class="director-projects-grid">
                @if (Model != null && Model.Any())
                {
                    foreach (var project in Model)
                    {
                        <div class="director-project-card">
                            <div class="project-title">@project.Name</div>
                            <div class="project-meta">
                                Created: @project.Startdate.ToString("MMMM dd, yyyy") |
                                Deadline: @project.Enddate.ToString("MMMM dd, yyyy")
                            </div>

                            <div class="progress-container">
                                <span class="progress-label">Progress:</span>
                                <div class="progress-bar-wrapper">
                                    <div class="progress-bar-container">
                                        <div class="progress-bar @(
                                             (project.Progress ?? 0) >= 100 ? "complete" :
                                             (project.Progress ?? 0) >= 75 ? "high-progress" :
                                             (project.Progress ?? 0) >= 50 ? "medium-progress" :
                                             "low-progress"
                                                                                )" style="width: @(project.Progress ?? 0) % "></div>
                            </div>
                            <span class="progress-percentage">@(project.Progress ?? 0)%</span>
                        </div>
                    </div>

                            <div class="location-info">
                                Location: @project.Location
                            </div>

                            <div class="action-buttons">
                                <a class="btn btn-primary" href="@Url.Action("ViewTask", "Task", new { projectId = project.Id })">View Task</a>
                                <a class="btn btn-primary" href="@Url.Action("Dashboard", "Project", new { projectId = project.Id })">View Project</a>
                            </div>
                        </div>
                                }
                }
                else
                {
                    <p class="no-projects-message">No Projects available.</p>
                }
            </div>
        </div>
    </div>
</div>
