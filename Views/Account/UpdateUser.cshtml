<div class="content">
    <h2>Register User</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div style="color: green; font-weight: bold;">@TempData["SuccessMessage"]</div>
    }

    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <label for="name">Name:</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)

        <label for="surname">Surname:</label>
        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Surname)

        <label for="dob">Date of Birth:</label>
        @Html.TextBoxFor(m => m.Dob, new { @type = "date", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Dob)

        <label for="cellNo">Cell Number:</label>
        @Html.TextBoxFor(m => m.CellNo, new { @class = "form-control", placeholder = "e.g., 0821234567" })
        @Html.ValidationMessageFor(m => m.CellNo)

        <label for="email">Email Address:</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)

        <label for="address">Address:</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Address)

        <button type="submit">Register User</button>
    }
</div>

