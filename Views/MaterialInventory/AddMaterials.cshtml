@model WebSpaceApp.Models.MaterialItemModel
@{
    ViewData["Title"] = "Add Material";
}

<section class="contact_section layout_padding">
    <div class="contact_bg_box">
        <div class="img-box">
            <img src="~/images/image5.jpg" alt="Material Image" />
        </div>
    </div>
    <div class="container">
        <div class="heading_container heading_center">
            <h2>ADD MATERIAL</h2>
            @if (ViewBag.ProjectId != null)
            {
                <p class="text-muted">Adding material for Project ID: @ViewBag.ProjectId</p>
            }
        </div>
        <div class="row">
            <div class="col-md-7 mx-auto">
                @using (Html.BeginForm("AddMaterials", "MaterialInventory", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @* Hidden field for ProjectId *@
                    @Html.HiddenFor(m => m.ProjectId)

                    <div class="contact_form-container">
                        <div>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Material Name" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", placeholder = "Quantity", type = "number", step = "0.01" })
                            @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.MetricUnit, new { @class = "form-control", placeholder = "Metric Unit (e.g., kg, m3)" })
                            @Html.ValidationMessageFor(m => m.MetricUnit, "", new { @class = "text-danger" })

                            <div class="btn-box mt-3">
                                <button type="submit" class="btn btn-primary">ADD MATERIAL</button>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger mt-2" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
