@model List<WebSpaceApp.Models.TaskDocument>
@{
    ViewBag.Title = "DocumentUpload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f4f7f9;
            display: flex;
            height: 100vh;
        }

        .page-container {
            display: flex;
            width: 100%;
            height: 100%;
        }

        .sidebar {
            width: 220px;
            background-color: whitesmoke;
            color: #fff;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

            .sidebar .logo {
                font-size: 24px;
                font-weight: bold;
                color: #ffc107;
                text-align: center;
                margin-bottom: 30px;
            }

            .sidebar nav ul {
                list-style: none;
                padding: 0;
            }

                .sidebar nav ul li a {
                    color: black; 
                    text-decoration: none;
                    display: block;
                    padding: 12px 15px;
                    border-radius: 4px;
                    transition: background-color 0.3s, color 0.3s;
                }

                    .sidebar nav ul li a.active,
                    .sidebar nav ul li a:hover {
                        background-color: #ffc107;
                        color: #212529;
                    }

        .main-content {
            flex-grow: 1;
            padding: 40px;
            background-color: #ffffff;
            overflow-y: auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #eee;
            padding-bottom: 20px;
        }

            .header h1 {
                margin: 0;
                font-size: 28px;
                color: #333;
            }

        .form-section, .document-list-section {
            background-color: #f8f9fa; 
            border-radius: 8px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        }

        .section-title {
            font-size: 22px;
            color: #333;
            margin-bottom: 20px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: bold;
                color: #555;
            }

            .form-group input[type="text"],
            .form-group select,
            .form-group textarea,
            .form-group input[type="file"] {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }

            .form-group input[type="file"] {
                border: none;
                background-color: #fff;
            }

            .form-group .btn-upload {
                background-color: #007bff;
                color: white;
                padding: 12px 20px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .form-group .btn-upload:hover {
                    background-color: #0056b3;
                }

        .document-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid #e9ecef;
        }

            .document-item:last-child {
                border-bottom: none;
            }

        .document-info {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .document-title-meta {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .document-icon {
            font-size: 24px;
            color: #6c757d;
        }

        .document-name {
            font-weight: bold;
            color: #333;
        }

        .document-meta {
            font-size: 12px;
            color: #888;
        }

        .document-actions a {
            color: #007bff;
            text-decoration: none;
            margin-left: 15px;
            transition: color 0.3s;
        }

            .document-actions a:hover {
                color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="sidebar">
            <div class="logo">ProBuild</div>
            <nav>
                <ul>
                    <li><a href="#">Project Overview</a></li>
                    <li><a href="#" class="active">Tasks & Documents</a></li>
                    <li><a href="#">Team</a></li>
                    <li><a href="#">Budget</a></li>
                    <li><a href="#">Log out</a></li>
                </ul>
            </nav>
        </div>
        <div class="main-content">
            <div class="header">
                <h1>@ViewBag.Title</h1>
            </div>

            <div class="form-section">
                <h2 class="section-title">Upload New Document</h2>
                @using (Html.BeginForm("Upload", "Documents", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label for="TaskName">Select Task</label>
                        <select name="TaskName">
                            <option>Task 1: Finalize Architectural Plan</option>
                            <option>Task 2: Implement User Authentication</option>
                            <option>Task 3: Perform Load Testing</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Title">Document Title</label>
                        <input type="text" name="Title" placeholder="e.g., Final Architectural Plan v2" />
                    </div>
                    <div class="form-group">
                        <label for="FilePath">Select File</label>
                        <input type="file" name="FilePath" />
                    </div>
                    <div class="form-group">
                        <label for="Comment">Add a Comment</label>
                        <textarea name="Comment" rows="3" placeholder="Explain the changes in this document..."></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn-upload">Upload Document</button>
                    </div>
                }
            </div>

            <div class="document-list-section">
                <h2 class="section-title">Existing Documents</h2>
                <div class="document-list">
                    @foreach (var doc in Model)
                    {
                        <div class="document-item">
                            <div class="document-info">
                                <div class="document-title-meta">
                                    <i class="fas fa-file-@doc.FileType document-icon"></i>
                                    <span class="document-name">@doc.Title</span>
                                </div>
                                <span class="document-meta">Associated with: @doc.TaskName</span>
                            </div>
                            <div class="document-actions">
                                <a href="#">Edit Title</a>
                                <a href="#">Replace File</a>
                                <a href="#" style="color: #dc3545;">Delete</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>