@model WebSpaceApp.Models.BudgetReport
@{
    ViewBag.Title = "Finance Report";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finance Report</title>
    <link href="https://fonts.googleapis.com/css?family=Arial" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f5f5f5;
        }

        .layout {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 220px;
            background-color: whitesmoke;
            color: #fff;
            display: flex;
            flex-direction: column;
            padding: 20px;
        }

            .sidebar .logo {
                font-size: 24px;
                font-weight: bold;
                color:darkorange;
                text-align: center;
                margin-bottom: 30px;
            }

            .sidebar nav ul {
                list-style: none;
                padding: 0;
            }

                .sidebar nav ul li a {
                    color: #000;
                    text-decoration: none;
                    display: block;
                    padding: 12px 15px;
                    border-radius: 4px;
                    transition: background-color 0.3s, color 0.3s;
                }

                    .sidebar nav ul li a.active,
                    .sidebar nav ul li a:hover {
                        background-color: #ff8c00;
                        color: #000;
                    }

        .main-content {
            flex-grow: 1;
            padding: 40px;
            background-color: #ffffff;
            overflow-y: auto; 
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #eee;
            padding-bottom: 20px;
        }

            .header h1 {
                margin: 0;
                font-size: 28px;
                color: #333;
            }

        .filter-controls {
            display: flex;
            gap: 10px;
        }

            .filter-controls select,
            .filter-controls button {
                padding: 10px 15px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 14px;
            }

            .filter-controls button {
                background-color: #007bff;
                color: white;
                cursor: pointer;
                border: none;
                transition: background-color 0.3s;
            }

                .filter-controls button:hover {
                    background-color: #0056b3;
                }

        .section-title {
            font-size: 22px;
            color: #333;
            margin-bottom: 20px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }

        .metrics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .metric-card {
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        }

            .metric-card h3 {
                margin-top: 0;
                font-size: 16px;
                color: #6c757d;
            }

            .metric-card p {
                font-size: 32px;
                font-weight: bold;
                margin: 10px 0 0;
                color: #333;
            }

            .metric-card .subtitle {
                font-size: 14px;
                color: #28a745;
                font-weight: normal;
            }

            .metric-card.overbudget {
                border-color: #dc3545;
                background-color: #fff3f3;
            }

                .metric-card.overbudget p {
                    color: #dc3545;
                }

                .metric-card.overbudget .subtitle {
                    color: #dc3545;
                }

        .chart-container {
            position: relative;
            height: 350px;
            margin-bottom: 40px;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

            table thead {
                background-color: #e9ecef;
            }

            table th, table td {
                text-align: left;
                padding: 12px;
                border-bottom: 1px solid #dee2e6;
            }

            table th {
                font-weight: bold;
                color: #495057;
            }
    </style>
</head>
<body>
    <div class="layout">
        <div class="sidebar">
            <div class="logo">Budget</div>
            <nav>
                <ul>
                    <li><a href="@Url.Action("BudgetList", "Budget")">Budget List</a></li>
                    <li><a href="@Url.Action("BudgetEntry", "Budget")">Add Budget</a></li>
                    <li><a href="@Url.Action("BudgetReport", "Budget")">Reports</a></li>
                    <li><a href="@Url.Action("Logout", "Account")">Log out</a></li>
                </ul>
            </nav>
        </div>

        <div class="main-content">
            <div class="header">
                <h1>Finance Report</h1>
                <div class="filter-controls">
                    @* <select>
                        <option>All Projects</option>
                        <option>Project Alpha</option>
                        <option>Project Beta</option>
                    </select>
                    <select>
                        <option>This Month</option>
                        <option>This Quarter</option>
                        <option>This Year</option>
                    </select> *@
                    @* <button>Export to PDF</button> *@
                </div>
            </div>

            <h2 class="section-title">Key Financials</h2>
            <div class="metrics-grid">
                <div class="metric-card">
                    <h3>Total Budget</h3>
                    <p>R @Model.TotalBudget</p>
                </div>
                <div class="metric-card">
                    <h3>Spent So Far</h3>
                    <p>R @Model.SpentSoFar</p>
                    <span class="subtitle">(@(Model.SpentSoFar / Model.TotalBudget * 100)% of budget)</span>
                </div>
                <div class="metric-card">
                    <h3>Remaining Budget</h3>
                    <p>R @Model.RemainingBudget</p>
                </div>
                <div class="metric-card overbudget">
                    <h3>Overbudget Items</h3>
                    <p>R @Model.OverbudgetItems</p>
                </div>
            </div>

            <h2 class="section-title">Budget Breakdown</h2>
            <div class="chart-container">
                <canvas id="budgetChart"></canvas>
            </div>

            <h2 class="section-title">Budget Details</h2>
            <table>
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Budgeted Amount</th>
                        <th>Actual Spend</th>
                        <th>Variance</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BudgetDetails)
                    {
                        var isOver = item.Variance > 0;
                        <tr>
                            <td>@item.Category</td>
                            <td>R @item.BudgetedAmount</td>
                            <td>R @item.ActualSpend</td>
                            <td style="color:@(isOver ? "#dc3545" : "#28a745")">
                                @(isOver ? "-" : "+")R @Math.Abs(item.Variance)
                            </td>
                            <td style="color:@(isOver ? "#dc3545" : "#28a745")">@item.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        const ctx = document.getElementById('budgetChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Materials', 'Labor', 'Equipment', 'Miscellaneous'],
                datasets: [{
                    data: [
                        @Model.BudgetDetails.FirstOrDefault(b => b.Category == "Materials")?.ActualSpend ?? 0,
                        @Model.BudgetDetails.FirstOrDefault(b => b.Category == "Labor")?.ActualSpend ?? 0,
                        @Model.BudgetDetails.FirstOrDefault(b => b.Category == "Equipment")?.ActualSpend ?? 0,
                        @Model.BudgetDetails.FirstOrDefault(b => b.Category == "Miscellaneous")?.ActualSpend ?? 0
                    ],
                    backgroundColor: ['#dc3545', '#007bff', '#ffc107', '#6c757d']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: {
                                size: 14
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>