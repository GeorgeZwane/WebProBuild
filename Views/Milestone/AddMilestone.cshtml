@model WebSpaceApp.Models.MilestoneModel

@{
    ViewBag.Title = "Create Milestone";
}

<div class="container">
    <h2>Create Milestone</h2>
    @using (Html.BeginForm("Create", "Milestone", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @* This hidden field is critical to pass the TaskEntityId back to the controller *@
        @Html.HiddenFor(m => m.TaskEntityId)

        <div>
            @Html.LabelFor(m => m.MilestoneName)
            @Html.TextBoxFor(m => m.MilestoneName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MilestoneName)
        </div>

        <div>
            @Html.LabelFor(m => m.Description)
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>

        <div>
            @Html.LabelFor(m => m.DueDate)
            @Html.TextBoxFor(m => m.DueDate, new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DueDate)
        </div>

        <button type="submit" class="btn btn-primary">Create Milestone</button>
    }
</div>

@* (Your styles can remain the same) *@

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f8;
        margin: 0;
        padding: 20px;
    }

    .container {
        background-color: #fff;
        padding: 20px 30px;
        border-radius: 8px;
        max-width: 500px;
        margin: 20px auto;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    h2 {
        margin-bottom: 20px;
        color: #333;
    }

    label {
        display: block;
        margin-top: 15px;
        font-weight: bold;
        color: #555;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    button {
        margin-top: 20px;
        background-color: #0078D7;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #005fa3;
        }
</style>
