@model WebSpaceApp.Models.MilestoneUpdate
@{
    ViewData["Title"] = "Update Milestone";
}

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f6f8;
    margin: 0;
    padding: 20px;
  }

  .container {
    background-color: #fff;
    padding: 20px 30px;
    border-radius: 8px;
    max-width: 500px;
    margin: 20px auto;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  label {
    display: block;
    margin-top: 15px;
    font-weight: bold;
    color: #555;
  }

  input, select, textarea {
    width: 100%;
    padding: 10px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  textarea {
    resize: vertical;
    height: 80px;
  }

  button {
    margin-top: 20px;
    background-color: #0078D7;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  button:hover {
    background-color: #005fa3;
  }
</style>

<div class="container">
  <h2>Update Milestone</h2>
  @using (Html.BeginForm("Update", "Milestone", FormMethod.Post))
  {
    @Html.HiddenFor(m => m.Id) <!-- Hidden field for Milestone ID -->

    @Html.LabelFor(m => m.MilestoneName)
    @Html.TextBoxFor(m => m.MilestoneName, new { @readonly = "readonly" })

    @Html.LabelFor(m => m.Status)
    @Html.DropDownListFor(m => m.Status, new SelectList(new[] {
        "Not Started", "In Progress", "Completed", "Delayed"
    }))

    @Html.LabelFor(m => m.Reason)
    @Html.TextAreaFor(m => m.Reason, new { placeholder = "Explain delay if any..." })

    <button type="submit">Update Milestone</button>
  }
</div>
